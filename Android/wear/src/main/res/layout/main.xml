<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:ignore="Overdraw">
    <ImageButton
        android:id="@+id/bConfWatch"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:contentDescription="@string/bConfWatch_desc"
        android:scaleType="centerInside"
        android:src="@drawable/icon_conf_filled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/time" />
    <TextView
        android:id="@+id/battery"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/battery_placeholder"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/time_placeholder"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/battery" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time" >
        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:background="@color/red" >
            <TextView
                android:id="@+id/score_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:text="@string/_0"
                android:contentDescription="@string/score_home_desc" />
            <LinearLayout
                android:id="@+id/sinbins_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/score_home"
                android:orientation="vertical" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingRight="10dp"
            android:paddingLeft="2dp"
            android:background="@color/blue" >
            <TextView
                android:id="@+id/score_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:text="@string/_0"
                android:contentDescription="@string/score_away_desc" />
            <LinearLayout
                android:id="@+id/sinbins_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/score_away"
                android:orientation="vertical" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kickClockHome"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:paddingEnd="10dp"
        android:background="@color/bg_partial"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tTimer"
        app:layout_constraintTop_toTopOf="@id/tTimer"
        app:layout_constraintBottom_toBottomOf="@id/tTimer" >
        <TextView
            android:id="@+id/tKickClockHomeLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:autoSizeTextType="uniform"
            android:text="@string/pk" />
        <TextView
            android:id="@+id/tKickClockHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:autoSizeTextType="uniform"
            android:text="@string/_0" />
    </LinearLayout>
    <TextView
        android:id="@+id/tTimer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/tTimer_placeholder"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:background="@color/bg_partial"
        app:layout_constraintStart_toEndOf="@id/kickClockHome"
        app:layout_constraintEnd_toStartOf="@id/kickClockAway"
        app:layout_constraintTop_toTopOf="@id/buttons_back"
        app:layout_constraintBottom_toTopOf="@id/pen_label" />
    <LinearLayout
        android:id="@+id/kickClockAway"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:paddingStart="10dp"
        android:background="@color/bg_partial"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/tTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tTimer"
        app:layout_constraintBottom_toTopOf="@id/pen_label" >
        <TextView
            android:id="@+id/tKickClockAwayLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:autoSizeTextType="uniform"
            android:text="@string/pk" />
        <TextView
            android:id="@+id/tKickClockAway"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:autoSizeTextType="uniform"
            android:text="@string/_0" />
    </LinearLayout>
    <Button
        android:id="@+id/bPenHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:text="@string/_0"
        android:contentDescription="@string/bPenHome_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pen_label"
        app:layout_constraintTop_toTopOf="@id/pen_label"
        app:layout_constraintBottom_toBottomOf="@id/pen_label" />
    <TextView
        android:id="@+id/pen_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:text="@string/pen_label_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <Button
        android:id="@+id/bPenAway"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:text="@string/_0"
        android:contentDescription="@string/bPenAway_desc"
        app:layout_constraintStart_toEndOf="@id/pen_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pen_label"
        app:layout_constraintBottom_toBottomOf="@id/pen_label" />
    <View
        android:id="@+id/buttons_back"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg_partial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <Button
        android:id="@+id/bOverTimer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textAllCaps="false"
        android:textColor="@color/w8blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttons_back" />
    <Button
        android:id="@+id/bStart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:text="@string/start"
        android:textAllCaps="false"
        android:textColor="@color/w8blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bMatchLog"
        app:layout_constraintTop_toTopOf="@id/buttons_back"
        app:layout_constraintBottom_toTopOf="@id/bConf"/>
    <ImageButton
        android:id="@+id/bMatchLog"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingVertical="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_match_log"
        android:scaleType="centerInside"
        android:contentDescription="@string/bMatchLog_desc"
        app:layout_constraintStart_toEndOf="@id/bStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttons_back"
        app:layout_constraintBottom_toTopOf="@id/bConf"/>
    <Button
        android:id="@+id/bBottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="10dp"
        android:autoSizeTextType="uniform"
        android:textAllCaps="false"
        android:textColor="@color/w8blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageButton
        android:id="@+id/bConf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="@string/bConf_desc"
        android:scaleType="centerInside"
        android:background="@color/transparent"
        android:src="@drawable/icon_conf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <LinearLayout
        android:id="@+id/confirm"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/confirm_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingHorizontal="30dp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:lines="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/confirm_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/no"
                android:textColor="@color/w8blue"
                tools:ignore="ButtonStyle"/>
            <Button
                android:id="@+id/confirm_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/yes"
                android:textColor="@color/w8blue"
                tools:ignore="ButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delay_end_wrapper"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingTop="30dp"
            android:paddingHorizontal="30dp"
            android:gravity="center"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:text="@string/delay_end_info" />
        <Button
            android:id="@+id/delay_end_cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingBottom="30dp"
            android:paddingHorizontal="30dp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:text="@string/delay_end_cancel"
            android:textColor="@color/w8blue" />
    </LinearLayout>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/delay_end_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicatorColor="@color/w8blue"
        app:trackColor="@color/transparent"
        app:trackThickness="2dp"
        app:indicatorInset="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.windkracht8.rugbyrefereewatch.ConfWatch
        android:id="@+id/confWatch"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.windkracht8.rugbyrefereewatch.Score
        android:id="@+id/score"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.windkracht8.rugbyrefereewatch.FoulPlay
        android:id="@+id/foulPlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.windkracht8.rugbyrefereewatch.PlayerNo
        android:id="@+id/playerNo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.windkracht8.rugbyrefereewatch.ExtraTime
        android:id="@+id/extraTime"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <com.windkracht8.rugbyrefereewatch.Correct
        android:id="@+id/correct"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>