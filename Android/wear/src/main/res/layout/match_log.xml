<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svMatchLog"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llMatchLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/ll_in_sc_padding"
        android:layout_marginBottom="@dimen/ll_in_sc_padding" >
        <TextView
            android:id="@+id/match_log_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/match_log_title"
            android:textColor="@color/w8blue"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/matchLogList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="50dp" />
    </LinearLayout>
</ScrollView>