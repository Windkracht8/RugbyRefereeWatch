<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/minTouchSize"
    android:background="@drawable/conf_item_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/confItemName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/ll_in_sc_padding"
        android:layout_marginRight="@dimen/ll_in_sc_padding" />
    <TextView
        android:id="@+id/confItemValue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textColor="@color/w8blue"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/ll_in_sc_padding"
        android:layout_marginRight="@dimen/ll_in_sc_padding" />
</LinearLayout>