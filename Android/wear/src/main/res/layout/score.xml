<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/score_try"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="30sp"
        android:gravity="center"
        android:text="@string/score_try_text" />
    <TextView
        android:id="@+id/score_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="30sp"
        android:gravity="center"
        android:text="@string/score_con_text" />
    <TextView
        android:id="@+id/score_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="30sp"
        android:gravity="center"
        android:text="@string/score_goal_text" />
    <TextView
        android:id="@+id/foul_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="30sp"
        android:gravity="center"
        android:text="@string/foul_play_text" />
</LinearLayout>
