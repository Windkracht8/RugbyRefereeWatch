<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svConf"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/llConf_padding"
        android:layout_marginTop="@dimen/llConf_padding"
        android:layout_marginEnd="@dimen/llConf_padding"
        android:layout_marginBottom="@dimen/llConf_padding" >
        <TextView
            android:id="@+id/conf_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/conf_title"
            android:textColor="@color/w8blue"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>
