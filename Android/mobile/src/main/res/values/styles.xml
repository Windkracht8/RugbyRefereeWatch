<resources>
    <style name="rrw_splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/rrw</item>
    </style>
    <style name="rrw" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:buttonTint">@color/button</item>
    </style>
    <style name="rrwReportEditSpinner" parent="rrw">
        <item name="android:spinnerItemStyle">@style/rrwReportEditSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/rrwReportEditDropDownItem</item>
    </style>
    <style name="rrwReportEditSpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="rrwReportEditDropDownItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="rrwDeviceStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">70sp</item>
        <item name="android:background">@drawable/bg_round</item>
    </style>
</resources>
