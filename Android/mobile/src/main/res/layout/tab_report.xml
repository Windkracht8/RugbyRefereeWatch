<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button
        android:id="@+id/bGetMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bGetMatch_text"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="gone" />
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stretchColumns="*" >
        <TableRow>
            <TextView
                android:id="@+id/tvHomeName"
                android:labelFor="@+id/etHomeName"
                android:layout_marginEnd="20dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="@string/home"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAwayName"
                android:labelFor="@+id/etAwayName"
                android:layout_marginStart="20dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="@string/away"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/tries" />
            <TextView
                android:id="@+id/tvHomeTries"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/tries" />
            <TextView
                android:id="@+id/tvAwayTries"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow
            android:id="@+id/trCons" >
            <TextView android:text="@string/conversions" />
            <TextView
                android:id="@+id/tvHomeCons"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/conversions" />
            <TextView
                android:id="@+id/tvAwayCons"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow
            android:id="@+id/trPenTries" >
            <TextView android:text="@string/pen_tries" />
            <TextView
                android:id="@+id/tvHomePenTries"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/pen_tries" />
            <TextView
                android:id="@+id/tvAwayPenTries"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow
            android:id="@+id/trGoals" >
            <TextView android:text="@string/goals" />
            <TextView
                android:id="@+id/tvHomeGoals"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/goals" />
            <TextView
                android:id="@+id/tvAwayGoals"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow
            android:id="@+id/trPenGoals" >
            <TextView android:text="@string/pen_goals" />
            <TextView
                android:id="@+id/tvHomePenGoals"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/pen_goals" />
            <TextView
                android:id="@+id/tvAwayPenGoals"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow
            android:id="@+id/trDropGoals" >
            <TextView android:text="@string/drop_goals" />
            <TextView
                android:id="@+id/tvHomeDropGoals"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="@string/_0" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="@string/drop_goals" />
            <TextView
                android:id="@+id/tvAwayDropGoals"
                android:gravity="end"
                android:text="@string/_0" />
        </TableRow>
        <TableRow>
            <Space />
            <TextView
                android:id="@+id/tvHomeTot"
                android:layout_marginEnd="20dp"
                android:background="@drawable/table_tot_line"
                android:gravity="end"
                android:text="@string/_0"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Space />
            <TextView
                android:id="@+id/tvAwayTot"
                android:background="@drawable/table_tot_line"
                android:gravity="end"
                android:text="@string/_0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/edit_team_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <EditText
            android:id="@+id/etHomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:inputType="text"
            android:gravity="center"/>
        <EditText
            android:id="@+id/etAwayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:inputType="text"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/svEvents_desc">
        <LinearLayout
            android:id="@+id/llEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
    <LinearLayout
        android:id="@+id/text_measure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTime"
            android:layout_marginEnd="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTime_placeholder"/>
        <TextView
            android:id="@+id/tvTimer"
            android:layout_marginEnd="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTimer_placeholder"/>
        <TextView
            android:id="@+id/tvScore"
            android:layout_marginEnd="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvScore_placeholder"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvNoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/tvNoEdit_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bView"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bView_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="invisible" />
        <Button
            android:id="@+id/bEdit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bEdit_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="invisible" />
        <Button
            android:id="@+id/bClose"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bClose_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="gone" />
        <Button
            android:id="@+id/bSave"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bSave_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="gone" />
        <Button
            android:id="@+id/bShare"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bShare_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
