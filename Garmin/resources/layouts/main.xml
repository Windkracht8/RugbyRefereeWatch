	<text-area id="score_home" x="left" y="25%" width="50%" height="25%" text="0" font="Gfx.FONT_LARGE" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="sinbin_home_1" visible="false" x="left" y="40%" width="50%" height="11%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="sinbin_home_2" visible="false" x="left" y="50%" width="50%" height="11%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
