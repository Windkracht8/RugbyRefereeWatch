	<text-area id="time" x="center" y="10%" width="100%" height="15%" text="00:00:00" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

