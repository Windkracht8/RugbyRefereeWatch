	<text-area id="sinbin_away_1" visible="false" x="right" y="40%" width="50%" height="11%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="sinbin_away_2" visible="false" x="right" y="50%" width="50%" height="11%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<drawable id="sinbin_away_bg" />

	<text-area id="timer" x="center" y="50%" width="100%" height="50%" text="40:00" font="Gfx.FONT_NUMBER_HOT" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

	<text-area id="kick_clock_home_label" visible="false" x="5%" y="55%" width="40%" height="15%" text="conv" font="Gfx.FONT_SMALL" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="kick_clock_home" visible="false" x="5%" y="62%" width="40%" height="25%" text="00" font="Gfx.FONT_NUMBER_MILD" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

	<text-area id="kick_clock_away_label" visible="false" x="50%" y="55%" width="40%" height="15%" text="conv" font="Gfx.FONT_SMALL" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="kick_clock_away" visible="false" x="50%" y="62%" width="40%" height="25%" text="00" font="Gfx.FONT_NUMBER_MILD" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

	<text-area id="pen_home" x="left" y="bottom" width="40%" height="15%" text="0" font="Gfx.FONT_SMALL" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_RIGHT" />
	<text-area id="pen" x="center" y="bottom" width="20%" height="15%" text="pen" font="Gfx.FONT_SMALL" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_CENTER" />
	<text-area id="pen_away" x="right" y="bottom" width="40%" height="15%" text="0" font="Gfx.FONT_SMALL" color="0xaaaaaa" justification="Gfx.TEXT_JUSTIFY_LEFT" />

	<text-area id="start" x="left" y="50%" width="50%" height="25%" text="start" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<bitmap id="match_log" x="50%" y="50%" filename="../drawables/icon_match_log.svg" />
	<bitmap id="conf" x="0" y="bottom" filename="../drawables/icon_conf.svg" />

	<text-area id="resume" visible="false" x="center" y="50%" width="100%" height="25%" text="resume" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="end" visible="false" x="center" y="bottom" width="100%" height="25%" text="end" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

	<text-area id="next" visible="false" x="center" y="50%" width="100%" height="25%" text="next" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="finish" visible="false" x="center" y="bottom" width="100%" height="25%" text="finish" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

	<text-area id="report" visible="false" x="center" y="50%" width="100%" height="25%" text="report" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area id="clear" visible="false" x="center" y="bottom" width="100%" height="25%" text="clear" font="Gfx.FONT_LARGE" color="0x55ffff" justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />

</layout>
