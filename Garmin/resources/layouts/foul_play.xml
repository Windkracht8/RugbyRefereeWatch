<layout id="FoulPlay" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
	<text-area
		id="card_yellow"
		x="center"
		y="top"
		width="100%"
		height="33%"
		text="@Strings.card_yellow"
		font="Gfx.FONT_LARGE"
		color="0xffff00"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area
		id="penalty_try"
		x="center"
		y="33%"
		width="100%"
		height="33%"
		text="@Strings.penalty_try"
		font="Gfx.FONT_LARGE"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
	<text-area
		id="card_red"
		x="center"
		y="bottom"
		width="100%"
		height="33%"
		text="@Strings.card_red"
		font="Gfx.FONT_LARGE"
		color="0xff0000"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
</layout>
