<layout id="Score" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
    <text-area
		id="score_try"
		x="center"
		y="top"
		width="100%"
		height="25%"
		text="@Strings._try"
		font="Gfx.FONT_LARGE"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
    <text-area
		id="score_con"
		x="center"
		y="25%"
		width="100%"
		height="25%"
		text="@Strings.con"
		font="Gfx.FONT_LARGE"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
    <text-area
		id="score_goal"
		x="center"
		y="50%"
		width="100%"
		height="25%"
		text="@Strings.goal"
		font="Gfx.FONT_LARGE"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
    <text-area
		id="foul_play"
		x="center"
		y="73%"
		width="100%"
		height="25%"
		text="@Strings.foul_play"
		font="Gfx.FONT_LARGE"
		justification="Gfx.TEXT_JUSTIFY_CENTER|Gfx.TEXT_JUSTIFY_VCENTER" />
</layout>
